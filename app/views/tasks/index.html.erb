<p id="notice"><%= notice %></p>
<div class="container">
  <%= search_form_for @q do |f| %>
  <%= f.label :title %>
  <%= f.search_field :title %>
  <%= f.label :status %>
   <%= f.select :status, ["unstarted", "in progress" , "completed"] %>

  <%= f.submit "search" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th>Deadline</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %> </td>
        <td><%= task.priority %></td>
        <td><button type="button" class="btn btn-secondary"><%= link_to 'Show', task %></button></td>
        <td><button type="button" class="btn btn-secondary"><%= link_to 'Edit', edit_task_path(task) %></button></td>
        <td><button type="button" class="btn btn-secondary"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <td><button type="button" class="btn btn-secondary"><%= link_to 'sort by deadline', tasks_path(sort_expired: "true") %></button></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Task', new_task_path %></button>
</div>
