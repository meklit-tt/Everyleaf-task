<div class="field">

<h1 class ="center"><%= @user.name %>'s page</h1>
<div class ="col-md-6">
    <p>
      <strong>User_id:</strong>
        <%= @user.id %>
    </p>
    <p>
      <strong>UserName</strong>
      <%= @user.name %>
    </p>
    <p>
      <strong>Email</strong>
      <%= @user.email %>
    </p>
    <p>
      <strong>priviledges</strong>
      <%= @user.admin? ? "yes":"no" %>
    </p>
    <p>
    <strong>created date:</strong>
    <%= @user.created_at %>
    </p>
    <%= link_to "Back to User Managment", admin_users_path %>
    <hr>
</div>

<div class="text-left">
<table class="table table-striped", border= "1px solid black" >
   <caption>Task details</caption>
  <tr style="background-color:#7FB3D5">
    <td>Title</td>
    <td>Detail</td>
    <td>Deadline</td>
    <td>Status</td>
    <td>Priority</td>
  </tr>

</div>
<div class="text-left">
   <% @tasks.each do |task| %>
     <tr>
       <td><%= task.title %></td>
       <td><%= task.detail %></td>
       <td><%= task.deadline %></td>
       <td><%= task.status %></td>
       <td><%= task.priority %></td>
     </tr>
  <% end %>
  </table>
 </div>
</div>
